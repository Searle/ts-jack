.Ide {
    display: flex;
    flex-direction: column;
    height: 100vh;
    overflow: hidden;

    .header,
    .footer {
        background-color: #f0f0f0;
        padding: 10px;
        text-align: center;
    }

    .content {
        display: flex;
        flex-direction: row;
        flex: 1;
        overflow: hidden;
    }

    .column {
        flex: 1;
    }

    .jackCode {
        flex: 1;
        overflow: auto;
        border: 2px solid #ccc;
    }

    .vmCode {
        overflow: auto;
        border: 2px solid #ccc;
    }

    .asmCode {
        overflow: hidden;
        /* empty */
    }
}
